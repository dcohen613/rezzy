<main>
	<div class="container-main">
		<div class="ui-left col-xs-2"> 
			<div class="reservation-list-container">
				<div class="reservation-list" id="droppable">

					<% @reservations.order('time_stamp ASC').each do |reservation| %>
				        <% if reservation.time_stamp > DateTime.now && reservation.time_stamp < @today %>
						<div class="reservation" id="draggable">
				        <%= reservation.name %> <br>
				        <%= reservation.party_size %> <br>
				        <%= reservation.time_stamp %> <br>
				        </div>
				        <% end %>
				    <% end %>
				</div>
			</div>
			<!-- <img id="pic" src="/assets/samon.jpeg"> -->
			<div class="btn-container">
				<a href="#" data-toggle="modal" data-target="#myModal" class="btn btn-primary btn-lg"> Add Reservation </a>
			</div>
		</div>
		<div class="ui-right col-xs-10">
			<div class="row">
				<div class="col-xs-3 tabletop" id ="tabletop">table 1</div>
				<div class="col-xs-3 tabletop" id ="tabletop">table 2</div>
				<div class="col-xs-3 tabletop" id ="tabletop">table 3</div>
			</div>
			<div class="row">
				<div class="col-xs-3 tabletop" id ="tabletop">table 4</div>
				<div class="col-xs-3 tabletop" id ="tabletop">table 5</div>
				<div class="col-xs-3 tabletop" id ="tabletop">table 6</div>
			</div>
			<div class="row">
				<div class="col-xs-3 tabletop" id ="tabletop">table 7</div>
				<div class="col-xs-3 tabletop" id ="tabletop">table 8</div>
				<div class="col-xs-3 tabletop" id ="tabletop">table 9</div>
			</div>
			<div class="row">
				<div class="col-xs-3 tabletop" id ="tabletop">table 10</div>
				<div class="col-xs-3 tabletop" id ="tabletop">table 11</div>
				<div class="col-xs-3 tabletop" id ="tabletop">table 12</div>
			</div>
		</div>
	</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document" style="width: 1050px !important; overflow: hidden;">
    <div class="modal-content">
      <div class="modal-body">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <iframe src="/reservations/new" width="1000" height="600" frameborder="0" ></iframe>

      </div>

    </div>
  </div>
</div>
</main>